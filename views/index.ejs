<% layout( 'layout' ) -%>

    <h1><%= title %></h1>
    <form action='/create' method='post' accept-charset='utf-8'>
        <input type='text' name='content' />
    </form>
    
    <h2>All todos</h2>
    <ul>
    <% todos.forEach(function(todo){ %>
        <li>
            <a href='/edit/<%= todo._id %>' title="edit this todo"><%= todo.content %></a>
            Created at: <%= todo.updated_at %>
            <a href='/destroy/<%= todo.id %>' title='Delete this todo item'>Delete</a>
        </li>
    <% }); %>
    </ul>
